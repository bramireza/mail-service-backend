{
  "name": "boilerplate-backend-ts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec node -r @swc/register index.ts",
    "build": "swc src index.ts -d dist -D",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint-staged": "lint-staged",
    "clean": "rm -rf dist",
    "tsc": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --ignore-path .gitignore --ext .js,.ts --fix"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@swc/cli": "0.4.0",
    "@swc/core": "1.7.26",
    "@swc/register": "0.1.10",
    "@types/better-queue": "^3.8.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "1.9.9",
    "@types/node": "22.6.1",
    "@types/nodemailer": "^6.4.16",
    "@typescript-eslint/eslint-plugin": "8.7.0",
    "@typescript-eslint/parser": "8.7.0",
    "eslint": "8.57.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "husky": "4.3.6",
    "lint-staged": "^15.2.10",
    "nodemon": "3.1.7",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "better-queue": "^3.8.12",
    "better-queue-sqlite": "^1.0.7",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.21.0",
    "handlebars": "^4.7.8",
    "mongoose": "^8.6.3",
    "morgan": "1.10.0",
    "nodemailer": "^6.9.15"
  }
}
